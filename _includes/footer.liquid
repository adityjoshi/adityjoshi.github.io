{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo" style="font-family: 'Modak', sans-serif;">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <div class="container mt-0">
      <div style="display: flex; justify-content: space-between; align-items: center;">
        <!-- Follow Me Section (Left-aligned) -->
        <div class="footer-left" style="flex: 1; text-align: left;">
          <p style="font-family: 'Glyphicons Halflings'; font-size: 1.5rem; color: red; font-weight: bold;">Follow Me</p>
          <div style="display: flex; gap: 10px; border: 1px solid #ccc; padding: 10px; border-radius: 5px; background-color: #f9f9f9;">
